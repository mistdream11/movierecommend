doctype html
html(lang='zh-CN')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title}
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap', rel='stylesheet')
    style(type='text/css').
      /* ========== CSS变量和基础重置 ========== */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        -webkit-font-smoothing: antialiased;
      }

      :root {
        --bg-gradient: linear-gradient(135deg, #e0f7fa 0%, #f3e5f5 100%);
        --primary: #4361ee;
        --primary-light: #5874f5;
        --primary-dark: #3a56d4;
        --text-main: #2d3748;
        --text-secondary: #718096;
        --input-bg: #f8f9fa;
        --input-border: #e2e8f0;
        --card-bg: #ffffff;
        --shadow: 0 4px 12px rgba(67, 97, 238, 0.12);
      }

      body {
        background: var(--bg-gradient);
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        color: var(--text-main);
        min-height: 100vh;
        padding: 40px 20px;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
      }

      h1 {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 30px;
        text-align: center;
        background: linear-gradient(135deg, var(--primary), #7b61ee);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
      }

      /* ========== 电影卡片网格 ========== */
      .movies-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
      }

      .movie-card {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 20px;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .movie-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(67, 97, 238, 0.18);
      }

      .movie-card img {
        width: 100%;
        height: 240px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
      }

      .movie-name {
        font-size: 14px;
        font-weight: 600;
        text-align: center;
        margin-bottom: 15px;
        color: var(--text-main);
        line-height: 1.4;
        min-height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      /* ========== 评分选择 ========== */
      .score-container {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      label {
        font-size: 12px;
        color: var(--text-secondary);
        font-weight: 500;
      }

      .score-select {
        flex: 1;
        padding: 8px 10px;
        border: 1.5px solid var(--input-border);
        border-radius: 6px;
        background: var(--input-bg);
        color: var(--text-main);
        font-size: 13px;
        cursor: pointer;
        transition: all 0.25s ease;
      }

      .score-select:hover {
        border-color: var(--primary);
        background: #ffffff;
      }

      .score-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
      }

      /* ========== 提交表单 ========== */
      .form-footer {
        display: flex;
        justify-content: center;
        gap: 15px;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
      }

      .btn {
        padding: 12px 32px;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.25s ease;
      }

      .btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: #ffffff;
        box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
      }

      .btn-primary:hover {
        background: linear-gradient(135deg, var(--primary-light), var(--primary));
        box-shadow: 0 6px 16px rgba(67, 97, 238, 0.25);
        transform: translateY(-2px);
      }

      .btn-primary:active {
        transform: translateY(0);
      }

      /* ========== 隐藏字段 ========== */
      input[type='text'][style*='visibility'],
      input[name='userid'],
      input[name='movieid'] {
        display: none !important;
      }

      /* ========== 响应式设计 ========== */
      @media (max-width: 768px) {
        h1 {
          font-size: 24px;
          margin-bottom: 20px;
        }

        .movies-grid {
          grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
          gap: 15px;
        }

        .movie-card {
          padding: 15px;
        }

        .movie-card img {
          height: 180px;
        }
      }

      @media (max-width: 480px) {
        body {
          padding: 20px 10px;
        }

        .movies-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 12px;
        }

        .btn {
          padding: 10px 20px;
          font-size: 14px;
        }
      }

  body
    div.container
      h1 热烈欢迎用户: #{username}，请您为以下电影打分:
      
      form(action='/submituserscore', method='post')
        input(type='hidden', name='userid', value=userid)
        
        div.movies-grid
          -if(movieforpage)
            -for(var i = 0; i < movieforpage.length; i++)
              div.movie-card
                img(src=movieforpage[i].picture, alt=movieforpage[i].moviename)
                div.movie-name= movieforpage[i].moviename
                
                div.score-container
                  label 评分:
                  select.score-select(name='moviescore')
                    option(value='') 请选择
                    option(value='1') ⭐ 1分
                    option(value='2') ⭐⭐ 2分
                    option(value='3') ⭐⭐⭐ 3分
                    option(value='4') ⭐⭐⭐⭐ 4分
                    option(value='5') ⭐⭐⭐⭐⭐ 5分
                
                input(type='hidden', name='movieid', value=movieforpage[i].movieid)
        
        div.form-footer
          button.btn.btn-primary(type='submit') 提交评分
          a(href='/index.html', style='display: flex; align-items: center;')
            button.btn(style='background: var(--input-bg); color: var(--text-main); border: 1.5px solid var(--input-border);', type='button') 返回首页
    
